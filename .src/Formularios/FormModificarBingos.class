  '**************************************************************************************************************************************
  
  cuenta = bingotmp.ArrayElementosRepetidos.count + bingotmp.cuadrosBlancos + bingotmp.cuadrosNegros
  
  Select Case bingotmp.tamanoCuadricula
    Case "4x3"
      If cuenta >= 12 Then 
        Message.Info(mensaje1)
        Return
      Endif
    Case "5x4"
