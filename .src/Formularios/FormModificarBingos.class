Public Sub ButtonGenerarCartones_Click()
  
  Dim cuenta As Integer
  Dim res As Integer
  
  Dim textoMensaje As String
  
  Dim mensaje1 As String = ("No se pueden generar cartones...\ndemasiados elementos repetidos, cuadros blancos y/o negros para el tipo de cartón")
